<%- include("partials/header.ejs") %>

<div class="container post">
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold text-body-emphasis"><%= post.title %></h1>
        <div class="col-lg-6 mx-auto ">
          <p class="lead mb-4 d-flex"><%= post.content %></p>
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-center text-start">
            <form action="/posts/edit/<%=post.id%>" method="get">
                <button type="submit" class="btn btn-danger btn-lg px-4 gap-3 ">Edit</button>
            </form>
            <form action="/posts/delete/<%=post.id%>" method="POST">
                <button type="submit" class="btn btn-outline-secondary btn-lg px-4 text-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
</div>

</body>
</html>